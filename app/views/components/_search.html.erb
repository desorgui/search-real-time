<%= form_tag articles_path, method: :get, class: 'd-flex search', data: { controller: "search", turbo_frame: "articles", turbo_action: "advance" } do %>
    <%= text_field_tag :query,
      params[:query],
      autocomplete: "off",
      class: "searchTerm",
      placeholder: "Search...",
      data: { action: "input->search#search"}
    %>
    <%= submit_tag "Search", id: "submitbtn", class: "searchButton" %>
  <% end %>
  