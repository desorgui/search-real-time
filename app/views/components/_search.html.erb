<%= form_tag articles_path, method: :get, class: 'd-flex mb-5', data: { controller: "search-form", turbo_frame: "articles", turbo_action: "advance" } do %>
    <%= text_field_tag :query,
      params[:query],
      autocomplete: "off",
      class: "form-control",
      placeholder: "Search...",
      data: { action: "input->search-form#search"}
    %>
    <%= submit_tag "Search", id: "submit", class: "btn btn-primary" %>
  <% end %>
  